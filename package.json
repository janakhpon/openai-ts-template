{
  "name": "openai-ts-template",
  "version": "1.0.0",
  "description": "Template for Open AI related tools",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "scan:secrets": "gitleaks detect --source . --verbose",
    "scan:deps": "pnpm audit",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "janakhpon",
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.0",
    "openai": "^6.10.0",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "gitleaks": "^1.0.0",
    "husky": "^8.0.3",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
